# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
#insert_final_newline = true

# git
[.git*]
indent_style = tab
indent_size = 4

# Shell Scripts
[**.{sh,bash}]
charset = utf-8
max_line_length = 110
end_of_line = lf
indent_style = space
indent_size = 2
tab_width = 2
insert_final_newline = true
trim_trailing_whitespace = true
shell_variant = bash

[Dockerfile]
indent_size = 4

# Golang
[{go.mod,go.sum,*.go}]
indent_style = tab
indent_size = 4

# Makefile
[Makefile]
indent_style = tab

# JSON
[*.{json,json5}]
indent_style = space
indent_size = 2

# Markdown
[**.{md,mdx}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
max_line_length = 80
